<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
	<div class="span6 offset3">
		<%= nested_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

  		<div><%= f.label :first_name, "Student's First Name" %>
  		<%= f.text_field :first_name, :autofocus => true%><br /></div>

  		<div><%= f.label :last_name, "Student's Last Name" %>
  		<%= f.text_field :last_name%><br /></div>

  		<div><%= f.label :form, "Form Class" %>
  		<%= f.text_field :form %><br /></div>

      <p>Which days would you like to attend?</p>
  		<div><%= f.check_box :tuesday %>
  		<%= f.label :tuesday %><br /></div>

  		<div><%= f.check_box :wednesday %>
  		<%= f.label :wednesday %><br /></div>

  		<div><%= f.check_box :thursday %>
  		<%= f.label :thursday %><br /><br /></div>

      <p>Which subjects would you like assistance with?</p>
      <div>
        <%= f.fields_for :subjects do |builder| %>
          <%= render 'layouts/subject_fields', :f => builder %>
        <% end %>
      </div>
      <p><%= f.link_to_add "Add Subject", :subjects %></p>

  		<div><%= f.label :parent_name, "Parent's Name"%>
  		<%= f.text_field :parent_name %><br /></div>

		  <div><%= f.label :email, "Parent's Email" %>
		  <%= f.email_field :email%><br /></div>

		  <div><%= f.label :contact, "Parent's Contact Phone Number"%>
  		<%= f.text_field :contact%><br /></div>

		  <div><%= f.label :password %>
		  <%= f.password_field :password %><br /></div>

		  <div><%= f.label :password_confirmation %>
		  <%= f.password_field :password_confirmation %><br /></div>

     <div> <%= f.label :reports do %>
        <%= f.check_box :reports %>
        Would you like to receive weekly Session Progress Reports to your email?
      <% end %><br /><br /></div>

		  <div><%= f.submit "Create my account", class: "btn btn-large btn-primary"%></div>
		<% end %>
		<%= render "users/shared/links" %>
	</div>
</div>
